<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".TranDuyHuynh.fragments.menu_flagment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtMenu"
                android:textColor="@color/colorBlack"
                android:textSize="30dp">

            </TextView>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:src="@drawable/btn_search"></ImageButton>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorSilver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/change_color_ln_user"
                android:id="@+id/ln_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_user_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/img_user">

                </ImageView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_user_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Duy Huynh Trần"
                        android:textColor="@color/colorBlack"
                        android:textSize="25dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="@string/txtXemTrangCaNhan"
                        android:textColor="@color/colorBlack">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_help">

            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="3"
                android:text="Trợ giúp ?"
                android:textColor="@color/colorBlack"
                android:textSize="30dp">

            </TextView>

            <ImageView
                android:id="@+id/imgDown_TroGiup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_down">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_choose_Help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_listview_doi_tim_tran"
                android:drawableLeft="@drawable/icon_team"
                android:drawablePadding="-100dp"
                android:paddingLeft="50dp"
                android:text="@string/txtTroGiup_LienHe"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"></Button>

            <Button
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_listview_doi_tim_tran"
                android:drawableLeft="@drawable/icon_team"
                android:drawablePadding="-60dp"
                android:paddingLeft="50dp"
                android:text="@string/txtTroGiup_BCSC"
                android:textColor="@color/colorBlack"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_listview_doi_tim_tran"
                android:drawableLeft="@drawable/icon_team"
                android:paddingLeft="50dp"
                android:text="@string/txtTroGiup_DieuKhoan"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_setting">

            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="3"
                android:text="Cài đặt"
                android:textColor="@color/colorBlack"
                android:textSize="30dp">

            </TextView>

            <ImageView
                android:id="@+id/img_Down_CaiDat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_down">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_choose_Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_listview_doi_tim_tran"
                android:drawableLeft="@drawable/icon_team"
                android:drawablePadding="-100dp"
                android:paddingLeft="50dp"
                android:text="@string/txtSetting_TaiKhoan"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_listview_doi_tim_tran"
                android:drawableLeft="@drawable/icon_team"
                android:drawablePadding="-100dp"
                android:paddingLeft="50dp"
                android:text="@string/txtSetting_NgonNgu"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_listview_doi_tim_tran"
                android:drawableLeft="@drawable/icon_team"
                android:paddingLeft="50dp"
                android:drawablePadding="-100dp"
                android:text="@string/txtSetting_GiaoDien"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnDangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_signout">

            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="4"
                android:text="Đăng xuất"
                android:textColor="@color/colorBlack"
                android:textSize="30dp">

            </TextView>


        </LinearLayout>


    </LinearLayout>
</ScrollView>
