<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_listview_doi_tim_tran"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgLogo_Teams_list_stadiums"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"></ImageView>

    <LinearLayout

        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txttenSan_lstStadiums"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLoaiHinhSan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/colorBlack"
                android:text="@string/txtLoaiHinhSan">

            </TextView>

            <TextView
                android:id="@+id/txtThongTinLoaiHinhSan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/colorBlack">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLoaiSan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/colorBlack"
                android:text="@string/txtLoaiSan">

            </TextView>

            <TextView
                android:id="@+id/txtThongTinLoaiSan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/colorBlack">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDiaChiSan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/colorBlack"
                android:text="@string/txtDiaChiSan">

            </TextView>

            <TextView
                android:id="@+id/txtThongTinDiaChiSan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/colorBlack"
                android:singleLine="true"
                android:maxLength="15"
                android:ellipsize="end">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_next"></ImageView>
</LinearLayout>
